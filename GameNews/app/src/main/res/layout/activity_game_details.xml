<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.mihai.group24_hw05.GameDetailsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/imageView"
            android:layout_height="100dp" />

        <TextView
            android:text="@string/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Overview_tag"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/overview"
                    android:textStyle="normal|bold"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="@string/genre"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:id="@+id/genre_tag"
                android:textStyle="normal|bold"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/genre"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="@string/publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publisher_tag"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_weight="0.12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publisher"
                android:layout_weight="2.22"
                android:textSize="18sp"
                android:layout_gravity="left"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <Button
                android:text="@string/play_trailer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/trailer"
                android:layout_gravity="center_horizontal"
                android:textStyle="normal|bold"
                android:textSize="18sp" />

            <Button
                android:text="@string/similar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/similarGames"
                android:layout_gravity="center_horizontal"
                android:textStyle="normal|bold"
                android:textSize="18sp" />

            <Button
                android:text="@string/finish"
                android:layout_height="wrap_content"
                android:id="@+id/finish"
                android:layout_gravity="center_horizontal"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_width="200dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
