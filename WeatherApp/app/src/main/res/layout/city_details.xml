<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:id="@+id/textViewCityName" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewCityName"
            android:layout_alignLeft="@+id/textViewCityName"
            android:layout_alignStart="@+id/textViewCityName"
            android:layout_marginTop="11dp"
            android:id="@+id/textViewCloudy" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/gallery_thumb"
            android:layout_below="@+id/textViewCloudy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/imageView2" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTemp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:id="@+id/textViewTime" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:id="@+id/textViewTemp"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>